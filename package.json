{
  "name": "k-porter",
  "version": "1.0.0",
  "description": "Kubernetes Port Forwarder - A utility to manage port forwarding to Kubernetes services",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "generate-icons": "scripts/generate-icons.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.18.1",
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.k-porter",
    "productName": "K-Porter",
    "publish": null,
    "asar": false,
    "extraResources": [
      {
        "from": "node_modules/@kubernetes",
        "to": "node_modules/@kubernetes"
      }
    ],
    "files": [
      "**/*",
      "!**/{.git,.idea,.vscode,docs,build/icons,.gitignore,.travis.yml,README.md}"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"],
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.plist",
      "entitlementsInherit": "build/entitlements.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "identity": null
    },
    "dmg": {
      "background": "build/background.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
} 